<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/emojisKeyboard"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <com.android.inputmethod.emoji.EmojiIconsTabBar
        android:id="@+id/emojis_tab"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">
            
        <TextView
            android:id="@+id/tab_emoji_recents"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            style="?android:attr/imageButtonStyle"
            android:text="@string/emoji_symbols"
            android:textColor="@color/dim_foreground_holo_dark"
            android:textSize="@dimen/emoji_icon_text_size"
            android:background="@drawable/emoji_tab_button"
            android:contentDescription="@null" />
        
        <TextView
            android:id="@+id/tab_emoji_faces"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            style="?android:attr/imageButtonStyle"
            android:text="@string/emoji_symbols"
            android:textColor="@color/dim_foreground_holo_dark"
            android:textSize="@dimen/emoji_icon_text_size"
            android:background="@drawable/emoji_tab_button"
            android:contentDescription="@null" />
        
        <TextView
            android:id="@+id/tab_emoji_objects"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            style="?android:attr/imageButtonStyle"
            android:text="@string/emoji_symbols"
            android:textColor="@color/dim_foreground_holo_dark"
            android:textSize="@dimen/emoji_icon_text_size"
            android:background="@drawable/emoji_tab_button"
            android:contentDescription="@null" />
        
        <TextView
            android:id="@+id/tab_emoji_nature"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            style="?android:attr/imageButtonStyle"
            android:text="@string/emoji_symbols"
            android:textColor="@color/dim_foreground_holo_dark"
            android:textSize="@dimen/emoji_icon_text_size"
            android:background="@drawable/emoji_tab_button"
            android:contentDescription="@null" />
        
        <TextView
            android:id="@+id/tab_emoji_places"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            style="?android:attr/imageButtonStyle"
            android:text="@string/emoji_symbols"
            android:textColor="@color/dim_foreground_holo_dark"
            android:textSize="@dimen/emoji_icon_text_size"
            android:background="@drawable/emoji_tab_button"
            android:contentDescription="@null" />
        
        <TextView
            android:id="@+id/tab_emoji_symbols"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            style="?android:attr/imageButtonStyle"
            android:text="@string/emoji_symbols"
            android:textColor="@color/dim_foreground_holo_dark"
            android:textSize="@dimen/emoji_icon_text_size"
            android:background="@drawable/emoji_tab_button"
            android:contentDescription="@null" />
        
        <TextView
            android:id="@+id/tab_emoji_emoticons"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            style="?android:attr/imageButtonStyle"
            android:text="@string/emoji_symbols"
            android:textColor="@color/dim_foreground_holo_dark"
            android:textSize="@dimen/emoji_icon_text_size"
            android:background="@drawable/emoji_tab_button"
            android:contentDescription="@null" />
        
    </com.android.inputmethod.emoji.EmojiIconsTabBar>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/emojis_tab"
        android:background="#8f8f8f"/>
    
    <android.support.v4.view.ViewPager
        android:layout_below="@+id/emojis_tab"
        android:id="@+id/emojis_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/emojiBottomKeyboard" />
    
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_above="@+id/emojiBottomKeyboard"
        android:background="#8f8f8f"/>
    
    <com.android.inputmethod.skeyboard.SoftKeyboardView
        android:id="@+id/emojiBottomKeyboard"
        android:layout_width="match_parent"
        android:layout_height="@dimen/key_height"
        android:layout_alignParentBottom="true" />

</RelativeLayout>
